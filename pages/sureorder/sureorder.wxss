@import "../../common/style/style.wxss";
page{background-color:#eee;}
.receive_addr,.pro_info{margin-bottom:8px;}
.creat_addr,.user_info text,.discount,.remark>text{font-size:15px;}
.creat_addr,.order_foot{height:45px;line-height:45px;}
.creat_addr .left_ico{margin-top:18px;}
.infoHead,.addr_detail{padding:8px 15px;}
.infoHead,.discount,.remark{border-bottom:1px solid #eee;}
.user_info text{margin-left:7px;}
.buy_pro_detail{padding:17px 15px;}
.buy_pro_detail>image{width:90px;height:90px;border:1px solid #eee;}
.order-right{padding-left:100px;}
.order-right>.order_pro_tit{line-height:1.5;margin-bottom:10px;font-size:14px;}
.order-right>.pro_price{font-size:16px;}
.discount{height:50px;line-height:50px;}
.no_use,.remark>view{color:#999;font-size:12px;}
.last_info .remark{padding:10px 15px;overflow:hidden;}
.remark>textarea{width:100%;height:105px;margin-top:5px;}
.remark>view{text-align:right;}
.order_foot{position:fixed;bottom:0;width:100%;font-size:16px;}
.order_foot .total{margin-left:15px;}
.sure_btn{width:120px;border-radius:0;}
.addr_info view{color:#666;}
.addr_info{padding-right:68px;line-height:1.6;}
.addr_detail .left_ico{position:absolute;top:26px;right:15px;}
.user_addr{margin-top:5px;}
.phone{margin-left:20px;}
.editAddress{position:absolute;right:0;top:0;width:64px;height:100%;background-color:#fed50f;}
.editAddress>text{padding:11px 16px;display:block;font-size:15px;}
.user_info text.userState,.linkseller{font-size:12px;color:#999;border:1px solid #b5b5b5;-webkit-border-radius:6px;border-radius:6px;padding:2px 5px;display:inline-block;vertical-align:middle;}
.userName{max-width:42%;display:inline-block;vertical-align:middle;}
.user_info{width:70%;}
.linkseller{padding:0;height:30px;line-height:30px;margin-top:5px;width:64px;text-align:center;}
.last_info{margin-bottom:60px;}
.verphoneBox{padding:14px 15px;}
.checkVer{font-size:14px;}
.checkVer>image{display:inline-block;width:16px;height:16px;-webkit-border-radius:50%;border-radius:50%;vertical-align:-3px;margin-right:5px;}
.price{color:#999;}
.price>text{margin-left:20px;}
.verPhone{padding-left:21px;font-size:12px;color:#f4911c;width:68%;}
.exLabel{background-color:#f4911c;color:#fff;font-size:12px;padding:2px 4px;}
.bottomBox{margin-top:5px;}
.maskDialog{-webkit-border-radius:6px;border-radius:6px;overflow:hidden;padding-bottom:20px;}
.closed{position:absolute;width:22rpx;height:22rpx;right:20rpx;top:18rpx;}
.maskTit{font-size:17px;text-align:center;height:100rpx;line-height:100rpx;background-color:#f7f7f9;}
.tipsTxt{font-size:14px;line-height:1.6;padding:32rpx 38rpx;text-indent:28px;}
.sureBtn{width:45%;font-size:17px;}
.proName{width:70%;display:inline-block;}
.orderDes{font-size:12px;color:#666;}